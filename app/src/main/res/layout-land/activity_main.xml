<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/card1"
        android:src="@drawable/c_ace_of_clubs"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card2"
        app:layout_constraintBottom_toTopOf="@id/btn_shuffle"/>

    <ImageView
        android:id="@+id/card2"
        android:src="@drawable/c_2_of_clubs"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintEnd_toStartOf="@id/card3"
        app:layout_constraintBottom_toTopOf="@id/btn_shuffle"/>

    <ImageView
        android:id="@+id/card3"
        android:src="@drawable/c_3_of_clubs"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/card2"
        app:layout_constraintEnd_toStartOf="@id/card4"
        app:layout_constraintBottom_toTopOf="@id/btn_shuffle"
        />

    <ImageView
        android:id="@+id/card4"
        android:src="@drawable/c_4_of_clubs"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/card3"
        app:layout_constraintEnd_toStartOf="@id/card5"
        app:layout_constraintBottom_toTopOf="@id/btn_shuffle"/>

    <ImageView
        android:id="@+id/card5"
        android:src="@drawable/c_5_of_clubs"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/card4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_shuffle"/>

    <TextView
        android:id="@+id/ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good Luck"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_shuffle"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Good Luck"
        android:id="@+id/btn_shuffle"
        app:layout_constraintTop_toBottomOf="@id/card5"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>